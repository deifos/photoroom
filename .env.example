# Database Configuration
DATABASE_URL=your_database_url_here
DIRECT_URL=your_direct_database_url_here

# Better Auth Configuration
BETTER_AUTH_SECRET=your_secret_key_here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authorized Emails (comma-separated list)
# Only these emails will be allowed to sign in and upload images
AUTHORIZED_EMAILS=email1@example.com,email2@example.com,email3@example.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=your_ga_id

# Cloudflare R2 Configuration
CLOUDFARE_BUCKET_API=your_r2_api_endpoint
CLOUDFARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFARE_BUCKET_NAME=your_bucket_name
CLOUDFARE_PUBLIC_URL=your_r2_public_url

# Optional: Status Banner
STATUS_BANNER_ENABLED=false
STATUS_BANNER_MESSAGE_KEY=platformIssues

# Optional: Web Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
